<div class="w-75 d-flex flex-column align-items-center">
    <h2>Products</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody id="products-table-body">
            {{#if products.length}}
            {{#each products}}
            <tr>
                <th scope="row" class="align-middle">{{this.title}}</th>
                <td class="align-middle">$ {{this.price}}</td>
                <td>
                    <img src={{this.thumbnail}} alt={{this.title}} class="rounded mx-auto d-block"
                        style="height:96px;width:96px">
                </td>
                {{/each}}
                {{else}}
                <th class="align-middle" colspan="3">There are no products</th>
                {{/if}}
            </tr>
        </tbody>
    </table>
    </table>
</div>